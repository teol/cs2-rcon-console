{
  "name": "@cs2-rcon/server",
  "version": "1.0.0",
  "description": "Fastify WebSocket server for CS2 RCON",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -b",
    "dev": "tsc-watch -b --onSuccess \"node dist/index.js\"",
    "start": "node dist/index.js",
    "typecheck": "tsc -b",
    "test": "vitest run"
  },
  "dependencies": {
    "@cs2-rcon/rcon": "workspace:*",
    "@cs2-rcon/shared": "workspace:*",
    "@fastify/static": "^8.1.0",
    "@fastify/websocket": "^11.0.2",
    "fastify": "^5.3.3"
  },
  "devDependencies": {
    "@types/node": "^22.15.0",
    "tsc-watch": "^7.2.0",
    "typescript": "^5.8.0",
    "vitest": "^4.0.18"
  }
}
